<nav id="site-nav">
	<ul>
		<li>
			<a href={BLOG_URL}>
				<Image src={logo} alt="Toronto Js Logo!" height={90} width={70} class="flex items-start" />
			</a>
		</li>
		<li>
			<a href={`${BLOG_URL}about`}>
				About
			</a>
		</li>
		<li>
			<a href={`${BLOG_URL}blog`}>
				Blog
			</a>
		</li>
		<li>
			<a href={`${BLOG_URL}accessibility`}>
				Accessibility
			</a>
		</li>
		<li>
			<a href={`${BLOG_URL}license`}>
				License
			</a>
		</li>
	</ul>
